#include <stdio.h>
#include <stdlib.h>

//demande à l'utilisateur d'entrer des notes entre 0 et 20 sinon s'arrête et affiche le nombre de notes saisies
int main (int argc, char *argv[]){
float note_saisie = 0, moyenne = 0, note_plus_basse = 20, note_plus_haute = 0;
int nb_notes = 0;

float 
printf("Vous allez saisir des notes. Les notes vont de 0 à 20. Si vous entrez une note en dehors de cet intervalle, vous ne pourrez plus en saisir !\n");
printf("\nSaisissez vos notes\n");
while (note_saisie >= 0 && note_saisie <= 20) {
    scanf("%f", &note_saisie);
    if (note_saisie >= 0 && note_saisie <= 20){
    moyenne += note_saisie; //somme des notes
    
    if (note_saisie > note_plus_haute) note_plus_haute = note_saisie;
    else if (note_saisie < note_plus_basse) note_plus_basse = note_saisie;
    }
nb_notes++;
}

nb_notes--;
if (nb_notes > 0) {
    moyenne = moyenne / nb_notes;
    printf("Vous avez saisi %d note(s).\n", nb_notes);
    printf("La plus basse note saisie : %.2f\n", note_plus_basse);
    printf("Moyenne = %.2f\n", moyenne);
    printf("La plus haute note saisie : %.2f\n", note_plus_haute);
}
else printf("Erreur : vous n'avez saisi aucune note !\n");

return 0;
}
