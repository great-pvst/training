#include <stdio.h>
#include <stdlib.h>


void division_avec_reste(int dividende, int diviseur)
{
	int q = 0;
	while (dividende - diviseur >= 0)
	{
		dividende = dividende - diviseur;
		q++;
	}
	printf ("Q = %d et R = %d\n", q, dividende);
}

