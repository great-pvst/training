	//exercice 9 : multiplication suivant le principe recursif
	int a = 36, b = 7;

	if (b%2 != 0)
	{
		while (b > 0) {
			printf("%i * %i = %d * %d + %d \n", a,b,a,b-1,a);
			b--;
		}
	}
	
	if (b%2 == 0)
	{
		while (b > 0)
		{
			printf("%i * %i = %d * %d \n", a,b,2*a,b/2);
			b = b/2;
			a = a*2;
		}
		
	}
	

return 0;
}	
